<%- include("partials/header"); -%>

<h1 class="heading">Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">

        <label for="postTitle"><strong>Title</strong></label>
        <input type="text" id="postTitle" class="form-control" name="postTitle">
        
        <label for="postBody"><strong>Post</strong></label>
        <textarea id="postBody" cols="30" rows="5" class="form-control" name="postBody"></textarea>

    </div>

    <button class="btn btn-primary submit-button">Publish</button>

</form>


<%- include("partials/footer"); -%>
